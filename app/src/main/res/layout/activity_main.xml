<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="25dp">

    <Button
        android:id="@+id/buttonSearchText"
        android:layout_width="218dp"
        android:layout_height="0dp"
        android:layout_marginBottom="14dp"
        android:text="Searching"
        app:layout_constraintBottom_toTopOf="@+id/sortingButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/mandelbrotButton"
        android:layout_width="218dp"
        android:layout_height="0dp"
        android:layout_marginBottom="95dp"
        android:text="Benchmarking"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nQueensButton" />

    <Button
        android:id="@+id/nQueensButton"
        android:layout_width="218dp"
        android:layout_height="0dp"
        android:layout_marginBottom="9dp"
        android:text="NQueens"
        app:layout_constraintBottom_toTopOf="@+id/mandelbrotButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sortingButton" />

    <Button
        android:id="@+id/sortingButton"
        android:layout_width="218dp"
        android:layout_height="0dp"
        android:layout_marginBottom="12dp"
        android:text="Sorting"
        app:layout_constraintBottom_toTopOf="@+id/nQueensButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSearchText" />

    <Button
        android:id="@+id/buttonDiscovery"
        android:layout_width="285dp"
        android:layout_height="53dp"
        android:layout_marginTop="41dp"
        android:layout_marginBottom="77dp"
        android:text="Discover and Connect"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="Select a demo below:"
        app:layout_constraintBottom_toTopOf="@+id/buttonSearchText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonDiscovery" />

</android.support.constraint.ConstraintLayout>